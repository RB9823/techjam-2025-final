# UI Validation API Configuration

# API Configuration
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AI API Configuration (choose one)
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
USE_OPENROUTER=false

# AI Model Configuration
DETECTION_CONFIDENCE=0.1
USE_GPU=true
GPT_MODEL=gpt-4o-mini
GPT_VISION_MODEL=gpt-4o
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
MAX_GPT_CALLS=20
GPT_BATCH_SIZE=4

# Debug Configuration
ENABLE_DEBUG_CROPS=false
DEBUG_OUTPUT_DIR=./debug_output

# CLIP Configuration
CLIP_MODEL=openai/clip-vit-large-patch14
CLIP_MAX_ELEMENTS=10
CLIP_SIMILARITY_THRESHOLD=0.1

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# HuggingFace Configuration
HF_CACHE_DIR=./.hf_cache

# Database (optional)
# DATABASE_URL=postgresql://user:password@localhost/ui_validation